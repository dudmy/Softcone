<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_shop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/shop" />

    <com.rey.material.widget.Spinner
        style="@style/Material.Widget.Spinner.Light"
        android:id="@+id/spinner_shop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shop"
        android:layout_alignParentLeft="true"
        android:minWidth="100dp"
        app:rd_style="@style/Material.Drawable.Ripple.Wave.Light"
        app:rd_enable="true"
        app:rd_delayClick="false"
        app:spn_arrowSwitchMode="true"
        app:spn_arrowAnimDuration="@android:integer/config_shortAnimTime"
        app:spn_arrowInterpolator="@android:anim/decelerate_interpolator"
        app:spn_dividerColor="#0098cb"
        android:focusable="false"
        android:layout_gravity="center_vertical"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tv_branch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/branch"
        android:layout_below="@+id/spinner_shop"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />

    <com.rey.material.widget.Spinner
        style="@style/Material.Widget.Spinner.Light"
        android:id="@+id/spinner_branch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_branch"
        android:layout_alignParentLeft="true"
        android:minWidth="100dp"
        app:rd_style="@style/Material.Drawable.Ripple.Wave.Light"
        app:rd_enable="true"
        app:rd_delayClick="false"
        app:spn_arrowSwitchMode="true"
        app:spn_arrowAnimDuration="@android:integer/config_shortAnimTime"
        app:spn_arrowInterpolator="@android:anim/decelerate_interpolator"
        app:spn_dividerColor="#0098cb"
        android:focusable="false"
        android:layout_gravity="center_vertical"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_below="@+id/spinner_branch"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_password" />

    <com.rey.material.widget.Button
        style="@style/StyleButton"
        android:id="@+id/btn_login"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#dddddd"
        android:text="@string/loginBtn"
        android:layout_below="@+id/edt_password"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true" />

    <com.rey.material.widget.Button
        style="@style/StyleButton"
        android:id="@+id/btn_signUp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="#dddddd"
        android:text="@string/signUpBtn"
        android:layout_below="@+id/btn_login"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
